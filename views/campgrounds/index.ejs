<%- include("../partials/header") -%>

<div class ="container">
	<div class="container">
		<header class="jumbotron"> 
			<h1 class="display-3"> Welcome to YelpCamp!</h1>
			<p class="lead"> Choose from crowd-favorite camping sites or share your favorite!</p>
			<a class = "btn btn-light" href="campgrounds/new">Add new Campground</a>
		</header>
	</div>
	<div class="row text-center">
		<% campgrounds.forEach(function(campground){ %>
		<div class= "card-deck col-lg-3 col-md-6 d-flex">
			<div class="card flex-fill">
  				<img src="<%=(campground).image %>" class="card-img-top" alt="...">
  				<div class="card-body">
   					 <h5 class="card-text"><%= campground.name %></h5>
 			 	</div>
				<p>
					<a href="/campgrounds/<%= campground._id %>" class ="btn btn-primary"> More Info </a>
				</p>
			</div>
		</div>
		<% }); %>
	</div>
</div>
<%- include("../partials/footer") -%>